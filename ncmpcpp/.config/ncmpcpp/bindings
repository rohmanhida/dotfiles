##### vim-like bindings #####
def_key "j"
    scroll_down
def_key "k"
    scroll_up
def_key "h"
    previous_column
def_key "l"
    next_column
def_key "ctrl-u"
    page_up
def_key "ctrl-d"
    page_down
def_key "g"
    move_home
def_key "G"
    move_end
def_key "/"
    find
def_key "n"
    next_found_item
def_key "N"
    previous_found_item
def_key "d"
    delete_playlist_items
# def_key "y"
#     copy_playlist_item
# def_key "p"
#     paste_playlist_item
def_key "u"
    update_database
def_key "D"
    delete_browser_items
def_key "v"
    reverse_selection
def_key "J"
    move_selected_items_down
def_key "K"
    move_selected_items_up
def_key "i"
    show_song_info
def_key "I"
    show_artist_info
def_key "x"
    toggle_crossfade
def_key "Z"
    shuffle
def_key "ctrl-s"
    save_playlist
def_key "ctrl-f"
    apply_filter
def_key "space"
    select_item
    scroll_down
def_key "ctrl-l"
    show_lyrics
def_key "ctrl-v"
    show_visualizer
def_key "tab"
    next_screen
def_key "shift-tab"
    previous_screen
# def_key "."
#     show_lyrics_updating_msg
def_key "r"
    toggle_repeat
def_key "z"
    toggle_random
def_key "Y"
    toggle_single
def_key "R"
    toggle_consume
def_key "t"
#     toggle_space_mode
# def_key "T"
    toggle_add_mode
def_key "="
    volume_up
def_key "-"
    volume_down
