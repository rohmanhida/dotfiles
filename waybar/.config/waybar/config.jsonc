    },
    "tray": {
        "icon-size": 12,
        "spacing": 10
    },
    "clock#time": {
        "interval": 10,
        "timezone": "Asia/Jakarta",
        "format": "ÔÄó  {:%H:%M}",
        "tooltip": true,
        "tooltip-format": "{:%A, %d %B %Y}",
