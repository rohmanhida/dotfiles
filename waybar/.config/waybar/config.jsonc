    },
    "network": {
        "format-wifi": "Ôá´  {essid} ({signalStrength}%)",
        "format-ethernet": "Û∞≤ù  {ipaddr}/{cidr}",
        "tooltip-format": "Û∞≤ù  {ifname} via {gwaddr}",
        "format-linked": "ÔÉÅ  {ifname} (No IP)",
