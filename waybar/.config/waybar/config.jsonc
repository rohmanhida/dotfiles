// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": false,
    "margin-top": 8,
    "modules-center": [
        "clock#date",
        "clock#time",
        "pulseaudio",
        "custom/weather",
        "custom/mail",
        "tray"
    ],
    "custom/weather": {
        "format": "{}¬∞",
        "tooltip": true,
        "interval": 3600,
